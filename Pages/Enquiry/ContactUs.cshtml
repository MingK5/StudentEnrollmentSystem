@page
@model StudentEnrollmentSystem.Pages.ContactUs.ContactUsModel
@{
    ViewData["Title"] = "Contact Us";
}

<h1>Contact Us</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["ErrorMessage"]
    </div>
}

<form method="post" class="form-horizontal">
    <div class="form-group">
        <label for="Category" class="col-sm-2 control-label">Category</label>
        <div class="col-sm-10">
            <select id="Category" name="Category" class="form-control" required>
                <option value="">-- Select a category --</option>
                <option value="Registry">Registry - For enrolment related matters</option>
                <option value="Scholarship">Scholarship - For internal scholarships, PTPTN, MARA study loans</option>
                <option value="Finance">Finance - For payment related matters</option>
            </select>
        </div>
    </div>

    <div class="form-group">
        <label for="Subject" class="col-sm-2 control-label">Subject</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="Subject" name="Subject" asp-for="Subject" required />
        </div>
    </div>

    <div class="form-group">
        <label for="Message" class="col-sm-2 control-label">Message</label>
        <div class="col-sm-10">
            <textarea class="form-control" id="Message" name="Message" asp-for="Message" rows="5" required></textarea>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Send Message</button>
        </div>
    </div>
</form>
