@page
@model StudentEnrollmentSystem.Pages.Payment.DebitNoteModel
@{
    Layout = null; // Standalone pop-up
    ViewData["Title"] = "Debit Note";
}

<!DOCTYPE html>
<html>
<head>
    <title>Debit Note - @Model.Transaction.DocumentNo</title>
    <script>
        // Auto-close the pop-up window when the session expires
        window.addEventListener('storage', function (event) {
            if (event.key === 'sessionExpired' && event.newValue === 'true') {
                window.close();
            }
        });
    </script>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
        }

        .debit-container {
            width: 450px;
            margin: auto;
            border: 1px solid #000;
            padding: 20px;
            text-align: left; 
        }

        h2 {
            text-align: center; /* Centers the title */
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            padding: 8px;
            border-bottom: 1px solid #ddd;
        }

        th {
            text-align: left; 
        }

        .print-button {
            margin-top: 20px;
            padding: 10px 20px;
            background-color: #0056b3;
            color: white;
            border: none;
            cursor: pointer;
            display: block;
            width: 100px;
            margin-left: auto;
            margin-right: auto;
            text-align: center;
        }

            .print-button:hover {
                background-color: #004494;
            }
    </style>
</head>
<body>
    <div class="debit-container">
        <h2>Debit Note</h2>
        <table>
            <tr><th>Student Name</th><td>@Model.StudentName</td></tr>
            <tr><th>Student ID</th><td>@Model.Transaction.StudentId</td></tr>
            <tr><th>Identification No</th><td>@Model.IdentificationNo</td></tr>
            <tr><th>Mailing Address</th><td>@Model.MailingAddress</td></tr>
            <tr><th>Session</th><td>@Model.Transaction.Session</td></tr>
            <tr><th>Transaction Date</th><td>@Model.Transaction.TransactionDate.ToString("dd/MM/yyyy")</td></tr>
            <tr><th>Particulars</th><td>@Model.Transaction.Particulars</td></tr>
            <tr><th>Debit Note No</th><td>@Model.Transaction.DocumentNo</td></tr>
            <tr><th>Status</th><td>@Model.Transaction.Status</td></tr>
            <tr><th>Amount</th><td>RM @Model.Transaction.Amount.ToString("0.00")</td></tr>
        </table>
        <button class="print-button" onclick="window.print()">Print</button>
    </div>
</body>
</html>
