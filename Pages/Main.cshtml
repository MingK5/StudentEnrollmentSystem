@page
@model StudentEnrollmentSystem.Pages.MainModel
@{
    Layout = null; // Prevents the default layout from being applied
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Online Enrollment Portal</title>
    <link rel="stylesheet" href="/css/site.css"> <!-- Ensure this CSS file contains styling -->
    <script>
        window.history.forward();
        function preventBack() { window.history.forward(); }
        setTimeout(preventBack, 0);
        window.onunload = function () { null };
    </script>
</head>

<body>
    @if (TempData["ErrorMessage"] != null)
    {
        <script>
            alert('@TempData["ErrorMessage"]');
        </script>
    }
    @if (TempData["SuccessMessage"] != null)
    {
        <script>
            alert('@TempData["SuccessMessage"]');
        </script>
    }
    <div class="main-container">
        <!-- Header Section -->
        <div class="header-container">
            <!-- Student Information -->
            <div class="student-info">
                <span>@Model.StudentName</span><br>
                <span>@Model.StudentId</span><br>
                <span>@Model.Program</span>
            </div>

            <!-- University Logo -->
            <div class="logo-container">
                <img src="~/Images/UniversityLogo.jpg" alt="University Logo" class="logo">
            </div>

            <!-- Logout Button -->
            <form method="post">
                <button type="submit" asp-page-handler="Logout" class="logout-button">Logout</button>
            </form>
        </div>

        <!-- Title -->
        <div class="text-center">
            <h1>Welcome to Online Enrollment Portal!</h1>
        </div>

        <!-- Sections -->
        <div class="sections-container">
            <div class="section">
                <h2>Enrolment</h2>
                <ul>
                    <li><a asp-page="/Enrolment/CourseEnrolment">Course Enrolment</a></li>
                </ul>
            </div>
            <div class="section">
                <h2>Add / Drop</h2>
                <ul>
                    <li><a asp-page="/AddDrop/CourseAddDrop">Course Add / Drop</a></li>
                    <li><a asp-page="/AddDrop/AddDropHistory">Add / Drop History</a></li>
                </ul>
            </div>
            <div class="section">
                <h2>Enquiry</h2>
                <ul>
                    <li><a asp-page="/Enquiry/ContactUs">Contact Us</a></li>
                    <li><a asp-page="/Enquiry/TimetableMatching">Timetable Matching</a></li>
                    <li><a asp-page="/Enquiry/StudentEvaluation">Student Evaluation of Teaching</a></li>
                </ul>
            </div>
            <div class="section">
                <h2>Statement</h2>
                <ul>
                    <li><a asp-page="/Statement/StudentStatement">Student Statement</a></li>
                    <li><a asp-page="/Statement/RegistrationSummary">Registration Summary / Class Timetable</a></li>
                </ul>
            </div>
            <div class="section">
                <h2>Payment</h2>
                <ul>
                    <li><a asp-page="/Payment/Payment">Payment</a></li>
                    <li><a asp-page="/Payment/PaymentHistory">Online Payment History / Receipt</a></li>
                    <li><a asp-page="/Payment/InvoiceAdj">Invoice and Adjustment Note</a></li>
                </ul>
            </div>
            <div class="section">
                <h2>Account</h2>
                <ul>
                    <li><a asp-page="/Account/ChangePassword">Change Password</a></li>
                    <li><a asp-page="/Account/UpdateProfile">Update Profile</a></li>
                    <li><a asp-page="/Account/UpdateBankDetails">Update Bank Details</a></li>
                </ul>
            </div>
        </div>
    </div>
</body>
</html>
