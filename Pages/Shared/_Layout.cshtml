@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    var user = HttpContextAccessor.HttpContext.User;
    var studentName = user.Identity.IsAuthenticated ? user.FindFirst(System.Security.Claims.ClaimTypes.Name)?.Value ?? "Unknown" : "";
    var studentId = user.Identity.IsAuthenticated ? user.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value ?? "Unknown" : "";
    var studentProgram = user.Identity.IsAuthenticated ? user.FindFirst("Program")?.Value ?? "Unknown" : "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Student Enrollment</title>
    <link rel="stylesheet" href="/css/site.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="header-container d-flex justify-content-between align-items-center p-3">
        <!-- Student Info -->
        <div class="student-info">
            <p><strong>@studentName</strong></p>
            <p>@studentId</p>
            <p>@studentProgram</p>
        </div>

        <!-- Logo -->
        <div class="logo-container text-center">
            <img src="/images/UniversityLogo.jpg" alt="University Logo" class="logo" />
        </div>

        <!-- Logout Button -->
        <form method="post" asp-page-handler="Logout">
            <button type="submit" class="logout-button">Logout</button>
        </form>
    </div>

    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" asp-page="/Main">Home</a></li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Online Enrollment</a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-page="/CourseEnrolment">Course Enrollment</a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Add / Drop</a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-page="/CourseAddDrop">Course Add / Drop</a></li>
                            <li><a class="dropdown-item" asp-page="/AddDropHistory">Add / Drop History</a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Enquiry</a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-page="/ContactUs">Contact Us</a></li>
                            <li><a class="dropdown-item" asp-page="/TimetableMatching">Timetable Matching</a></li>
                            <li><a class="dropdown-item" asp-page="/StudentEvaluation">Student Evaluation of Teaching</a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Statement</a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-page="/StudentStatement">Student Statement</a></li>
                            <li><a class="dropdown-item" asp-page="/RegistrationSummary">Registration Summary / Class Timetable</a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Payment</a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-page="/Payment">Payment</a></li>
                            <li><a class="dropdown-item" asp-page="/PaymentHistory">Online Payment History / Receipt</a></li>
                            <li><a class="dropdown-item" asp-page="/InvoiceAdj">Invoice and Adjustment Note</a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Account</a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-page="/ChangePassword">Change Password</a></li>
                            <li><a class="dropdown-item" asp-page="/UpdateProfile">Update Profile</a></li>
                            <li><a class="dropdown-item" asp-page="/UpdateBankDetails">Update Bank Details</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content Section -->
    <div class="container mt-4">
        @RenderBody()
    </div>

</body>
</html>